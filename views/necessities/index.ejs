<% include ../layouts/header.ejs %>

<h1>Necessities</h1>
<a href="/necessities/new">New Necessities</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Approx. Price</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% necessities.forEach(function(necessity){ %>
      <tr>
        <td><%= necessity.name %></td>
        <td><%= necessity.approxPrice %></td>
        <td><a href="/necessities/edit/<%= necessity._id %>">Edit</a></td>
        <td><a href="/necessities/delete/<%= necessity._id %>" onclick="return confirm('Are you sure you want to delete the necessity <%= necessity.name %>?');">Delete</a></td>
      </tr>
    <% }); %>
    
  </tbody>
</table>

<% include ../layouts/footer.ejs %>
